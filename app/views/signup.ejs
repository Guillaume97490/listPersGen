<% include ./partials/head.ejs %>
<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Express Generator</strong> Inspription</h1>
                    <div class="description">
                        <p>
                            Description...
                        </p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>S'inscrire</h3>
                            <p>Entrer votre nom d'utilisateur, email et mot de passe:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-key"></i>
                        </div>
                    </div>
                    <div class="form-bottom">

                        <% if (error.length > 0) { %>
                        <div class="alert alert-danger"><%- error %></div>
                        <% } %>

                        <% if (success.length > 0) { %>
                        <div class="alert alert-success"><%- success %></div>
                        <% } %>



                        <form role="form" action="/signup" role="form" method="post" method="post" class="login-form">


                            <div class="form-group">
                                <label for="username" class="sr-only">Nom d'utilisateur</label>
                                <input type="text" name="username" id="username" class="form-control form-username"
                                    required placeholder="Nom d'utilisateur" />

                            </div>


                            <div class="form-group">
                                <label for="email" class="sr-only">Email</label>
                                <input type="email" name="email" id="email" class="form-control  form-username" required
                                    placeholder="Email" />

                            </div>

                            <div class="form-group">
                                <label for="password" class="sr-only">Mot de passe</label>
                                <input type="password" name="password" id="password" class="form-control  form-username"
                                    ng-model="user.password" required placeholder="Mot de passe" />

                            </div>


                            <button type="submit" class="btn btn-success">S'enrigistrer</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-6 col-sm-offset-3 social-login">
                    <h3>...ou se connecter avec:</h3>
                    <div class="social-login-buttons">
                        <a class="btn btn-link-1 btn-link-1-facebook" href="#">
                            <i class="fa fa-facebook"></i> Facebook
                        </a>
                        <a class="btn btn-link-1 btn-link-1-twitter" href="#">
                            <i class="fa fa-twitter"></i> Twitter
                        </a>
                        <a class="btn btn-link-1 btn-link-1-google-plus" href="#">
                            <i class="fa fa-google-plus"></i> Google Plus
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<% include ./partials/footer.ejs %>